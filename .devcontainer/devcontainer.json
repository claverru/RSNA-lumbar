{
    "name": "Existing Dockerfile",
    "context": "..",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/bin/python",
                "editor.rulers": [
                    120
                ],
                "[python]": {
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll": "explicit",
                        "source.organizeImports": "explicit"
                    }
                },
                "ruff.organizeImports": true,
                "ruff.fixAll": true,
                "editor.formatOnSave": true,
                "ruff.lineLength": 120,
                "ruff.targetVersion": "py310"
            },
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "ms-toolsai.jupyter",
                "mechatroner.rainbow-csv"
            ]
        }
    },
    "runArgs": [
        "--ipc=host",
        "--gpus=all"
    ],
    "mounts": [
        "source=${localEnv:HOME}/.gitconfig,target=/home/docker_user/.gitconfig,type=bind",
        "source=${localEnv:HOME}/.kaggle,target=/home/docker_user/.kaggle,type=bind",
        "source=${localEnv:HOME}/.ssh,target=/home/docker_user/.ssh,type=bind"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/docker_user/workspace,type=bind,consistency=delegated",
    "workspaceFolder": "/home/docker_user/workspace"
}