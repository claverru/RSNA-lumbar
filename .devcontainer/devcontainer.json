{
	"name": "Existing Dockerfile",
	"context": "..",
	"dockerFile": "Dockerfile",
	"customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/bin/python",
                "editor.rulers": [
                    120
                ],
                "files.trimFinalNewlines": true,
                "files.trimTrailingWhitespace": true,
                "files.insertFinalNewline": true,
                "isort.args": [
                    "--py", "37", "--profile", "black", "src"
                ],
                "black-formatter.args": [
                    "-t", "py37", "-l", "120", "-S", "src"
                ],
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit"
                    }
                }
            },
            "extensions": [
                "ms-python.python",
                "ms-python.isort",
                "ms-python.black-formatter"
            ],

    }
    },
	"runArgs": [
		"--ipc=host",
		"--gpus=all"
	],
	"mounts": [
		"source=${localEnv:HOME}/.gitconfig,target=/home/docker_user/.gitconfig,type=bind",
		"source=${localEnv:HOME}/.kaggle,target=/home/docker_user/.kaggle,type=bind"
	],
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/docker_user/workspace,type=bind,consistency=delegated",
	"workspaceFolder": "/home/docker_user/workspace"
}
